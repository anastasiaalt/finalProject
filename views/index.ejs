<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Stress App</title>
    <script
        src="/angular/angular.js">
    </script>
    <script
        src="/dist/semantic.min.js">
    </script>
    <script
        src="/jquery/dist/jquery.js">
    </script>
    <script
        src="/js/main.js">
    </script>
    <link
        rel="stylesheet"
        type="text/css"
        href="/dist/semantic.min.css">
</head>

<body>

    <div class="ui one column grid container">
        <div class="column center">
            <h1 class="welcome">
                Welcome to Stress App
            </h1>
        </div>
        <div class="column">
            <a
                href="/login/linkedin"
                class="ui linkedin button">
                    <i
                        class="linkedin icon">
                    </i>
                LinkedIn
            </a>
            <a
                href="/auth/linkedin">
            </a>
            <p
                class="welcome">
                -OR-
            </p>
            <button
                class="ui button">
            <a
                href="/register">
                Sign Up
            </a>
            </button>
        </div>
        <div class="column">
            <h2>
                Sign In
            </h2>
        </div>
    </div>

        <div
            class="ui form segment container">
            <form
                method="POST" 
                action="/login">
            <div
                class="one field">
                    <label
                        for="username">
                        Username
                    </label>
                    <input
                        type="text"
                        name="user[username]"
                        placeholder="Username" 
                        required autofocus>
            </div>
            <div 
                class="one field">
                    <label 
                        for="password">
                        Password
                    </label>
                    <input
                        type="password"
                        name="user[password]" 
                        placeholder="Password"
                        required autofocus>
            </div>
            <div>
                <button 
                    class="ui submit button test"
                    type="submit">
                    Login
                </button>
            </div>
        </form>
        </div>
    </div>
      

    <div class="ui horizontal divider">
        <i class="inbox icon"></i>
    </div>

  <!-- TODO this should only be here for logged in users -->

    <nav 
        class="ui pointing blue menu container">
        <h3
            class= "header item">
            Brand
        </h3>
            <a
                href="/topics"
                class="item"
                id="topic">
                    <img
                        src="/img/girls.png"
                        alt="Topic">
            </a>
            <a
                href="/posts/new"
                class="item"
                id="write">
                    <img
                        src="/img/write.png"
                        alt="Write">
            </a>
            <a
                href="/"
                class="active item"
                id="read">
                    <img
                        src="/img/read.png"
                        alt="Read">
            </a>
            <a
                href="/favorites"
                class="item"
                id="favorite">
                    <img 
                        src="/img/heart.png"
                        alt="Favorite">
            </a>
    </nav>

    <div class="ui relaxed grid container">
        <h2
            class="ui center">
            What are your peers and colleagues really thinking?
        </h2>
    </div>

    <div
        class="ui relaxed grid container">
        <div 
            class="three column row">
            <% posts.forEach(function(post){ %>
                <div
                    class="ui segment column">
                        <p>Message: <%= post.content %></p>
                        <p>Topic: <%= post.topic %></p>
                            <div
                                class="ui labeled button"
                                tabindex="0">
                                    <div
                                        class="ui button">
                                            <div 
                                                class="ui tiny images">
                                                <img
                                                    class="ui image" 
                                                    src="/img/praise.png" 
                                                    alt="Upvote">
                                                Like
                                            </div>
                                    </div>
                                <a 
                                    class="ui basic label">
                                    2,048
                                </a>
                            </div>
                </div>
            <% }) %>
        </div>
    </div>

<script src="/js/main.js"></script>
</body>
</html>